{
  "name": "app-backend",
  "description": "Backend",
  "scripts": {
    "start": "nodemon --watch \"src/**/*.ts\" -e ts,json --exec \"npx ts-node --transpile-only ./src/server.ts\"",
    "start-server": "npx ts-node --transpile-only ./src/server.ts",
    "test": "nodemon --exec \"cross-env NODE_ENV=test mocha -r ts-node/register ./src/**/*.test.ts --exit || exit 1\"",
    "build:documentation": "copyfiles --flat ./src/documentation/openapi.json ./dist/documentation/",
    "build:env": "copyfiles --flat ./.env ./dist/",
    "build:database": "copyfiles --flat ./raally.db ./dist/",
    "build": "tsc && npm run build:documentation && npm run build:env && npm run build:database ",
    "db:create": "npm run build && node ./dist/database/migrations/create",
    "stripe:login": "stripe login",
    "stripe:start": "stripe listen --forward-to localhost:8080/api/plan/stripe/webhook"
  },
  "dependencies": {
    "@google-cloud/storage": "7.12.1",
    "@sendgrid/mail": "8.1.3",
    "app-backend": "file:",
    "aws-sdk": "2.1691.0",
    "bcrypt": "5.1.1",
    "cli-highlight": "2.1.11",
    "cors": "2.8.5",
    "dotenv": "16.4.5",
    "express": "4.20.0",
    "express-rate-limit": "7.4.0",
    "formidable-serverless": "1.1.1",
    "helmet": "7.1.0",
    "jsonwebtoken": "9.0.2",
    "lodash": "4.17.21",
    "moment": "2.30.1",
    "mv": "2.1.1",
    "mysql2": "3.11.1",
    "passport": "0.7.0",
    "passport-facebook": "3.0.0",
    "passport-google-oauth": "2.0.0",
    "pg": "8.12.0",
    "pg-hstore": "2.3.4",
    "sequelize": "6.37.3",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "stripe": "16.10.0",
    "swagger-ui-dist": "5.17.14"
  },
  "private": true,
  "devDependencies": {
    "copyfiles": "2.4.1",
    "cross-env": "7.0.3",
    "mocha": "10.7.3",
    "node-mocks-http": "1.16.0",
    "nodemon": "3.1.4",
    "sequelize-cli": "6.6.2",
    "ts-node": "10.9.2",
    "typescript": "5.6.2"
  }
}
